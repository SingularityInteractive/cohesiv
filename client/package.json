{
  "name": "cohesiv-client",
  "version": "0.0.0",
  "description": "A boilerplate monolith designed to be deployed within a Cohesiv cluster",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "scripts": {
    "serve": "node server/dist/index.js",
    "start:server": "cross-env NODE_ENV=development concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:server\" \"nodemon server/dist/index.js\"",
    "watch:server": "tsc -p server -w",
    "start:web": "node config/scripts/start.js",
    "build:server": "tsc -p server",
    "build:web": "node config/scripts/build.js",
    "lint": "tslint -c server/tslint.json -p server && eslint *.js client/src config --color",
    "test": "yarn test:server && yarn test:web",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
    "test:web": "node config/scripts/test.js --env=jsdom",
    "test:server": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "es6",
    "mocha",
    "istanbul",
    "REST",
    "API",
    "boilerplate"
  ],
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "1.15.2",
    "compression": "1.6.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.1",
    "debug": "^2.4.5",
    "dotenv": "^4.0.0",
    "express": "4.14.0",
    "express-healthcheck": "0.1.0",
    "express-https-redirect": "1.0.0",
    "express-jwt": "5.1.0",
    "express-validation": "1.0.1",
    "express-winston": "2.1.2",
    "helmet": "3.1.0",
    "http-status": "^0.2.0",
    "joi": "^10.6.0",
    "joi-browser": "^10.6.1",
    "jsonwebtoken": "7.1.9",
    "material-ui": "next",
    "material-ui-icons": "^1.0.0-alpha.19",
    "method-override": "^2.3.5",
    "mobx": "^3.2.2",
    "mobx-react": "^4.2.2",
    "pg": "^7.2.0",
    "postcss-flexbugs-fixes": "^3.2.0",
    "promise": "^8.0.1",
    "pure-react-carousel": "^1.9.7",
    "react": "latest",
    "react-dom": "latest",
    "react-native": "^0.46.3",
    "react-native-web": "git+https://github.com/sammccord/react-native-web.git",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.0",
    "rxjs": "^5.4.3",
    "rxjs-grpc": "^0.1.4",
    "sequelize": "4.4.10",
    "sequelize-cli": "2.8.0",
    "serve-static": "1.12.3",
    "spdy": "3.4.7",
    "whatwg-fetch": "^2.0.3",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "@reactivex/rxjs": "^5.4.3",
    "@types/express": "^4.0.37",
    "@types/express-jwt": "^0.0.37",
    "@types/http-status": "^0.2.30",
    "@types/joi": "^10.4.2",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/node": "^8.0.28",
    "@types/sequelize": "^4.0.73",
    "@types/winston": "^2.3.5",
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.26.0",
    "babel-core": "6.18.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react": "^1.0.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-expo": "^3.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "6.18.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chai": "^3.4.1",
    "commitizen": "^2.9.2",
    "concurrently": "^3.5.0",
    "coveralls": "^2.11.6",
    "cross-env": "3.1.3",
    "css-loader": "^0.28.5",
    "cz-conventional-changelog": "1.2.0",
    "del": "^2.2.0",
    "eslint": "^4.5.0",
    "eslint-config-expo": "^6.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-watch": "2.1.14",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "istanbul": "1.1.0-alpha.1",
    "jest": "^21.0.1",
    "lint-staged": "^4.0.3",
    "mocha": "3.2.0",
    "nodemon": "^1.11.0",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.5.3",
    "prettier-eslint": "^6.4.2",
    "react-dev-utils": "^3.1.1",
    "react-error-overlay": "^1.0.10",
    "style-loader": "^0.18.2",
    "supertest": "2.0.1",
    "supertest-as-promised": "4.0.2",
    "sw-precache-webpack-plugin": "^0.11.4",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "url-loader": "^0.5.9",
    "validate-commit-msg": "^2.6.1",
    "webpack": "^3.5.5",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.7.1",
    "webpack-manifest-plugin": "^1.3.1"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ],
    "plugins": [
      "add-module-exports",
      "transform-decorators-legacy",
      "transform-async-to-generator",
      "transform-object-rest-spread"
    ],
    "ignore": [
      "node_modules"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "expo",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-unused-vars": "off"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/client/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/client/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "react-native/Libraries/Renderer/shims/ReactNativePropRegistry": "node_modules/react-native-web/dist/modules/ReactNativePropRegistry/index.js",
      "^react-native-joi$": "joi-browser"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ]
  }
}
